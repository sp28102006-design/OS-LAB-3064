#include <stdio.h>

int main() {
    int n, i, j, temp;
    int bt[10], wt[10], tat[10];

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    printf("Enter the burst time:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &bt[i]);

    // Sort burst times
    for (i = 0; i < n - 1; i++)
        for (j = i + 1; j < n; j++)
            if (bt[i] > bt[j]) {
                temp = bt[i];
                bt[i] = bt[j];
                bt[j] = temp;
            }

    wt[0] = 0;
    for (i = 1; i < n; i++)
        wt[i] = wt[i - 1] + bt[i - 1];

    for (i = 0; i < n; i++)
        tat[i] = wt[i] + bt[i];

    printf("\nGantt Chart:\n|");
    for (i = 0; i < n; i++)
        printf(" %d |", bt[i]);

    printf("\n0");
    for (i = 0; i < n; i++)
        printf("   %d", tat[i]);

    float avg_w = 0, avg_t = 0;
    for (i = 0; i < n; i++) {
        avg_w += wt[i];
        avg_t += tat[i];
    }

    printf("\nAverage Waiting Time: %.2f", avg_w / n);
    printf("\nAverage Turnaround Time: %.2f", avg_t / n);

    return 0;
}

Sample Input
4
6 8 7 3

output
Gantt Chart:
| 3 | 6 | 7 | 8 |
0   3   9   16   24
Average Waiting Time: 5.00
Average Turnaround Time: 11.00
